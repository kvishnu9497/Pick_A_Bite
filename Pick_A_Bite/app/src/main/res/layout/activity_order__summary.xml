<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow"
    tools:context=".Order_Summary">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:theme="@style/toolbar_theme"
        app:logo="@drawable/pab_logo_org1" />

    <View
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="1.1dp"
        android:background="@drawable/shadow"
        android:layout_below="@id/toolbar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_toolbar"
        app:cardElevation="3dp">
        <TextView
            android:id="@+id/order_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textColor="@color/dark_orange"
            android:padding="9dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_above="@+id/proceed_to_checkout"
        android:layout_marginBottom="1dp"
        android:background="#fcfcfc">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/order_model"
            android:layout_above="@id/view3"
            android:layout_alignParentTop="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <View
            android:layout_above="@id/total_view"
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="7dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />

        <RelativeLayout
            android:id="@+id/total_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="5dp">
            <TextView
                android:id="@+id/subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal : "
                android:textColor="#4c4c4c"
                android:padding="8dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/subtotal_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/dark_orange"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:text="₹ 10000"/>
            <TextView
                android:id="@+id/delivery_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Charge : "
                android:textColor="#4c4c4c"
                android:padding="8dp"
                android:layout_below="@+id/subtotal"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/delivery_charge_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/dark_orange"
                android:textStyle="bold"
                android:layout_below="@id/subtotal_rate"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@id/subtotal_rate"
                android:text="₹ 100"/>
            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total : "
                android:textColor="#4c4c4c"
                android:padding="8dp"
                android:layout_below="@+id/delivery_charge"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/total_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_orange"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_below="@id/delivery_charge_rate"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@id/subtotal_rate"
                android:text="₹ 10100"/>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/proceed_to_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROCEED TO CHECKOUT"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_gravity="bottom|end"
        android:gravity="center"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_orange"/>

</RelativeLayout>