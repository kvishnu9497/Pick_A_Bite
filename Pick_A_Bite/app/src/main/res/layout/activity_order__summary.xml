<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow"
    tools:context=".Order_Summary">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:theme="@style/toolbar_theme"
        app:logo="@drawable/pab_logo_org1" />

    <View
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="1.1dp"
        android:background="@drawable/shadow"
        android:layout_below="@id/toolbar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_toolbar"
        app:cardElevation="3dp">
        <TextView
            android:id="@+id/order_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textColor="@color/dark_orange"
            android:padding="9dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_above="@+id/proceed_to_checkout"
        android:layout_marginBottom="1dp"
        android:background="#fcfcfc">

        <android.support.v7.widget.CardView
            android:id="@+id/element1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            app:contentPadding="5dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/itemname"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="1dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="#4c4c4c"
                        android:text="Chicken Tandoor Grill with Extra Chilli"
                        android:textSize="14sp"/>
                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="9dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:id="@+id/count1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ECEFF1"
                    android:layout_gravity="center"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/remove1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/reduce" />

                    <TextView
                        android:id="@+id/counter"
                        android:text="2000"
                        android:textStyle="bold"
                        android:textColor="#7f7f7f"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <ImageView
                        android:id="@+id/add1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/add"/>
                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="9dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/rate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="₹99999"
                        android:padding="2dp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/dark_orange"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <View
            android:layout_below="@id/element1"
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />

        <View
            android:layout_above="@id/total_view"
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />

        <RelativeLayout
            android:id="@+id/total_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:padding="3dp">
            <TextView
                android:id="@+id/subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:textColor="#323232"
                android:padding="10dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/subtotal_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/dark_orange"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:text="₹ 10000"/>
            <TextView
                android:id="@+id/delivery_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Charge"
                android:textColor="#323232"
                android:padding="10dp"
                android:layout_below="@+id/subtotal"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/delivery_charge_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/dark_orange"
                android:textStyle="bold"
                android:layout_below="@id/subtotal_rate"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@id/subtotal_rate"
                android:text="₹ 100"/>
            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="#323232"
                android:padding="10dp"
                android:layout_below="@+id/delivery_charge"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/total_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_orange"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_below="@id/delivery_charge_rate"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@id/subtotal_rate"
                android:text="₹ 10100"/>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/proceed_to_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROCEED TO CHECKOUT"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_orange"/>

</RelativeLayout>