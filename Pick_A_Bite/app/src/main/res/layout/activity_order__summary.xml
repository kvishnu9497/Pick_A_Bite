<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow"
    tools:context=".Order_Summary">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:theme="@style/toolbar_theme"
        app:logo="@drawable/pab_logo_org1" />

    <View
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="1.1dp"
        android:background="@drawable/shadow"
        android:layout_below="@id/toolbar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_toolbar"
        app:cardElevation="3dp">
        <TextView
            android:id="@+id/order_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textColor="@color/dark_orange"
            android:padding="9dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="54dp"
        android:background="#f5f5f5"
        app:contentPadding="3dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp"
        android:layout_below="@id/title">

        <RelativeLayout
            android:id="@+id/orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/element1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                app:contentPadding="4dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/item1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="149dp"
                            android:layout_height="wrap_content"
                            android:paddingStart="1dp"
                            android:paddingEnd="5dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="Chicken Tandoor Grill with Extra Chilli"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/view1"
                        android:layout_width="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="9dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray"/>

                    <LinearLayout
                        android:id="@+id/count1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ECEFF1"
                        android:layout_gravity="center"
                        android:padding="3dp">

                        <ImageView
                            android:id="@+id/remove1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/reduce" />

                        <TextView
                            android:id="@+id/counter"
                            android:text="100"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp" />

                        <ImageView
                            android:id="@+id/add1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/add"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="9dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/rate1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:padding="10dp"
                            android:text="â‚¹99999"
                            android:layout_centerInParent="true"
                            android:textColor="@color/dark_orange"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <View
                android:layout_below="@id/element1"
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_height="1.1dp"
                android:background="@android:color/darker_gray"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROCEED TO CHECKOUT"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_orange"/>

</RelativeLayout>