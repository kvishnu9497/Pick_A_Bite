<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow"
    tools:context=".Order_Summary">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:theme="@style/toolbar_theme"
        app:logo="@drawable/pab_logo_org1" />

    <View
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="1.1dp"
        android:background="@drawable/shadow"
        android:layout_below="@id/toolbar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_toolbar">
        <TextView
            android:id="@+id/order_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textColor="@color/dark_orange"
            android:padding="9dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="54dp"
        app:contentPadding="3dp"
        app:cardCornerRadius="3dp"
        android:layout_below="@id/title">

        <RelativeLayout
            android:id="@+id/orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/element"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                app:contentPadding="5dp">
                <RelativeLayout
                    android:id="@+id/element1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_name">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="1dp"
                            android:paddingEnd="5dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_alignParentStart="true"
                            android:text="Chicken Tandoor Grill "
                            android:textSize="14sp"/>
                    </RelativeLayout>


                    <View
                        android:id="@+id/view1"
                        android:layout_width="1dp"
                        android:layout_marginTop="7dp"
                        android:layout_height="35dp"
                        android:layout_toRightOf="@id/item_name"
                        android:background="@android:color/darker_gray"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:layout_toEndOf="@id/item_name"/>

                    <RelativeLayout
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/view1"
                        android:background="#ECEFF1"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:padding="4dp">

                        <ImageView
                            android:id="@+id/remove"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/reduce" />

                        <TextView
                            android:id="@+id/itemtext1"
                            android:text="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_toEndOf="@id/remove"/>

                        <ImageView
                            android:id="@+id/add"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_toEndOf="@id/itemtext1"
                            android:src="@drawable/add"/>
                    </RelativeLayout>

                    <View
                        android:id="@+id/view3"
                        android:layout_width="1dp"
                        android:layout_marginTop="7dp"
                        android:layout_height="35dp"
                        android:background="@android:color/darker_gray"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/count"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/view3">
                        <TextView
                            android:id="@+id/rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:padding="10dp"
                            android:text="â‚¹9999"
                            android:layout_centerInParent="true"
                            android:textColor="@color/dark_orange"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </RelativeLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/element2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/element"
                android:layout_marginBottom="2dp"
                app:contentPadding="5dp">
                <RelativeLayout
                    android:id="@+id/element3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_name1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="1dp"
                            android:paddingEnd="5dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_alignParentStart="true"
                            android:text="Chicken Tandoor Grill Halwa sdnsnknks sjdnfksnkjfnsf"
                            android:textSize="14sp"/>
                    </RelativeLayout>

                    <View
                        android:id="@+id/view4"
                        android:layout_width="1dp"
                        android:layout_marginTop="7dp"
                        android:layout_height="35dp"
                        android:background="@android:color/darker_gray"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:layout_toEndOf="@id/item_name1"/>

                    <RelativeLayout
                        android:id="@+id/count1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/view4"
                        android:background="#ECEFF1"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:padding="4dp">

                        <ImageView
                            android:id="@+id/remove1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/reduce" />

                        <TextView
                            android:id="@+id/itemtext2"
                            android:text="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_toEndOf="@id/remove1"/>

                        <ImageView
                            android:id="@+id/add1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_toEndOf="@id/itemtext2"
                            android:src="@drawable/add"/>
                    </RelativeLayout>

                    <View
                        android:id="@+id/view5"
                        android:layout_width="1dp"
                        android:layout_marginTop="7dp"
                        android:layout_height="35dp"
                        android:background="@android:color/darker_gray"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/count1"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/view5">
                        <TextView
                            android:id="@+id/rate2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:padding="10dp"
                            android:text="â‚¹99999"
                            android:layout_centerInParent="true"
                            android:textColor="@color/dark_orange"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </RelativeLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <View
                android:layout_below="@id/element2"
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_height="1.1dp"
                android:background="@android:color/darker_gray"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROCEED TO CHECKOUT"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_orange"/>

</RelativeLayout>