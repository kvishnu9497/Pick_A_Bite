<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <stroke
                android:width="2dp"
                android:color="#6666ff"/>
            <corners
                android:radius="3dp" />

            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp"/>
            <solid android:color="#b2b2ff"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="2dp"
                android:color="#6666ff"/>
            <corners
                android:radius="3dp" />

            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp"/>
            <solid android:color="#b2b2ff"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="2dp"
                android:color="#6666ff"/>
            <corners
                android:radius="3dp" />

            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp"/>
            <solid android:color="#b2b2ff"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/blue"/>
            <corners
                android:radius="3dp" />

            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp"/>
            <solid android:color="@color/blue"/>
        </shape>
    </item>
</selector>